extends layouts/main

block content
    // Breadcrumbs
    .breadcrumb
        .container
            ul
                li
                    a(href='index.html') Home
                li
                    a(href='team.html') Team
                li.active
                    a(href='team-member.html') Team Member
    // Team Member
    section.section-team-member
        .container
            .col-md-6
                img(src='img/team-member/team-member-4.jpg', alt='')
            .col-md-6
                h3 Manuel Umberto Juarez
                p.position Chef
                p.description
                    | While our founder is our main chef, he’s also a part of our family! Managing our menu,
                    | interior, and finances, this man still manages to rock his major position – cooking a majority of our
                    | restaurant dishes!
                ul.team-link
                    li
                        a.icon.fa.fa-facebook(href='#')
                    li
                        a.icon.fa.fa-twitter(href='#')
                    li
                        a.icon.fa.fa-google-plus(href='#')
    // Reservation
    section.section-reservation
        .container
            .col-md-1
            .col-md-5
                h3 Reservation
                p
                    | We are always ready to meet all your needs and requirements during the night time. Please call 555.329.0632 or
                    | fill out the contact form and we will call back to you ASAP.
            .col-md-5.reservation-form
                form(action='')
                    .col-md-6
                        .form-group
                            label.form-label.form-label-outside(for='contact-name')
                            input#contact-name.form-control.form-control-has-validation.form-control-last-child(name='name', data-contraints='@Required', type='text', placeholder='Your name')
                            span.form-validation
                    .col-md-6
                        .form-group
                            label.form-label.form-label-outside(for='contact-email')
                            input#contact-phone.form-control.form-control-has-validation.form-control-last-child(name='email', data-contraints='@Required', type='text', placeholder='Phone')
                            span.form-validation
                    .col-md-12
                        .form-group
                            label.form-label.form-label-outside(for='contact-email')
                            input#contact-email.form-control.form-control-has-validation.form-control-last-child(name='email', data-contraints='@Required', type='email', placeholder='Email')
                            span.form-validation
                    .col-sm-2
                        button.btn.btn-primary(type='submit') Submit